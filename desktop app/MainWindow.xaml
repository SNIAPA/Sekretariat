<Window x:Class="desktop_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:desktop_app"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800" SizeToContent="Height">
    <Grid>
        <TabControl Height="390" VerticalAlignment="Top">

            <TabItem Header="uczniowie">

                <DataGrid AutoGenerateColumns="False" 
                          Height="360"
                          HorizontalAlignment="Center" 
                          Name="student_list_grid" 
                          VerticalAlignment="Top" 
                          CanUserSortColumns="True"
                          CanUserDeleteRows="True"
                          RowHeight="50">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Imie" Binding="{Binding Path=first_name}" MinWidth="50" />
                        <DataGridTextColumn Header="Nazwisko" Binding="{Binding Path=last_name}" MinWidth="50" />
                        <DataGridTextColumn Header="Imie ojca" Binding="{Binding Path=fathers_name}" MinWidth="50" />
                        <DataGridTextColumn Header="Imie matki" Binding="{Binding Path=mothers_name}" MinWidth="50" />
                        <DataGridTextColumn Header="plec" Binding="{Binding Path=gender}" MinWidth="50" />
                        <DataGridTextColumn Header="pesel" Binding="{Binding Path=pesel}" MinWidth="50" />
                        <DataGridTemplateColumn Header="Zdjecie" MinWidth="100">
                            <DataGridTemplateColumn.CellTemplate >
                                <DataTemplate>
                                    <Image Height="50" Source="{Binding Path=photo}"></Image>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Path=photo}"></TextBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="Delete" Content="delete"></Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
        
        
        
        <Grid Height="45" VerticalAlignment="Top" Margin="0,390,0,0" >
            <Button x:Name="importButton" Content="Import" Margin="80,12,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"  Height="20px" Width="50px"></Button>
            <Button x:Name="exportButton" Content="Export" Margin="10,12,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"  Height="20px" Width="50px"></Button>
        </Grid>
    </Grid>
</Window>
