<Window x:Class="desktop_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:desktop_app"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800" SizeToContent="Height">

    <Grid>
        <TabControl Height="390" VerticalAlignment="Top">
            <TabItem Header="uczniowie">
                <DataGrid AutoGenerateColumns="False" 
                          Height="360"
                          HorizontalAlignment="Center" 
                          Name="student_list" 
                          VerticalAlignment="Top" >
                    <DataGrid.Columns >
                        <DataGridTextColumn Header="Imie" Binding="{Binding Path=first_name}" MinWidth="50" />
                        <DataGridTextColumn Header="Nazwisko" Binding="{Binding Path=last_name}" MinWidth="50" />
                        <DataGridTextColumn Header="Imie ojca" Binding="{Binding Path=fathers_name}" MinWidth="50" />
                        <DataGridTextColumn Header="Imie matki" Binding="{Binding Path=mothers_name}" MinWidth="50" />
                        <DataGridTextColumn Header="plec" Binding="{Binding Path=gender}" MinWidth="50" />
                        <DataGridTextColumn Header="pesel" Binding="{Binding Path=pesel}" MinWidth="50" />
                        <DataGridTemplateColumn Header="" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Delete" Command="Delete"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <Border BorderThickness="1" BorderBrush="Black"/>
        </TabControl>
        
        
        
        <Grid Height="45" VerticalAlignment="Top" Margin="0,390,0,0" >
            <Button x:Name="importButton" CommandParameter="test" Margin="80,12,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"  Height="20px" Width="50px"></Button>
            <Button Margin="10,12,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Export" Height="20px" Width="50px"></Button>
        </Grid>
    </Grid>
</Window>
